{
  "name": "snipplets-vscode",
  "displayName": "Snipplets",
  "description": "Snipplets VSCode Extension",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.42.0"
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "yarn run lint"
  },
  "publisher": "tassoruas",
  "icon": "logo.png",
  "repository": {
    "url": "https://github.com/tassoruas/Snipplets-VSCode"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.tassoruas.login",
    "onCommand:extension.tassoruas.logout",
    "onCommand:extension.tassoruas.addSnippet",
    "onCommand:extension.tassoruas.updateSnippet",
    "onCommand:extension.tassoruas.searchSnippets"
  ],
  "main": "./snipplets.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.tassoruas.login",
        "title": "Snipplets: Login"
      },
      {
        "command": "extension.tassoruas.logout",
        "title": "Snipplets: Logout"
      },
      {
        "command": "extension.tassoruas.addSnippet",
        "title": "Snipplets: Add Snippet"
      },
      {
        "command": "extension.tassoruas.updateSnippet",
        "title": "Snipplets: Update Snippet"
      },
      {
        "command": "extension.tassoruas.searchSnippets",
        "title": "Snipplets: Search Snippets"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "snipplets",
          "title": "Snipplets",
          "icon": "./logo2.svg"
        }
      ]
    },
    "views": {
      "snipplets": [
        {
          "id": "views.snippets",
          "name": "Snippets"
        },
        {
          "id": "views.test",
          "name": "Test"
        }
      ]
    },
    "configuration": {
      "title": "Snipplets",
      "properties": {
        "extension.tassoruas.serverUrl": {
          "type": "string",
          "default": null,
          "description": "Server Url",
          "scope": "application"
        }
      }
    }
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.1",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.42.0",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "mocha": "^7.0.1",
    "typescript": "^3.7.5",
    "vscode-test": "^1.3.0"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "js-sha256": "^0.9.0",
    "jsonc-parser": "^2.2.1"
  }
}
