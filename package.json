{
  "name": "snipplets-vscode",
  "displayName": "Snipplets",
  "description": "Snipplets VSCode Extension",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.42.0"
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "yarn run lint",
    "dev": "ts-node-dev --respawn --transpileOnly ./snipplets.ts",
    "prod": "tsc && node ./build/app.js"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "js-sha256": "^0.9.0",
    "jsonc-parser": "^2.2.1"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.42.0",
    "glob": "^7.1.6",
    "vscode-test": "^1.3.0"
  },
  "publisher": "tassoruas",
  "icon": "logo.png",
  "repository": {
    "url": "https://github.com/tassoruas/Snipplets-VSCode"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*",
    "onCommand:snipplets.register",
    "onCommand:snipplets.login",
    "onCommand:snipplets.logout",
    "onCommand:snipplets.addSnippet",
    "onCommand:snipplets.updateSnippet",
    "onCommand:snipplets.searchSnippets"
  ],
  "main": "./snipplets.js",
  "contributes": {
    "commands": [
      {
        "command": "snipplets.register",
        "title": "Snipplets: Register"
      },
      {
        "command": "snipplets.login",
        "title": "Snipplets: Login"
      },
      {
        "command": "snipplets.logout",
        "title": "Snipplets: Logout"
      },
      {
        "command": "snipplets.addSnippet",
        "title": "Snipplets: Add Snippet"
      },
      {
        "command": "snipplets.searchSnippets",
        "title": "Snipplets: Search Snippets"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "snipplets",
          "title": "Snipplets",
          "icon": "./logo-activitybar.svg"
        }
      ]
    },
    "views": {
      "snipplets": [
        {
          "id": "views.snippets",
          "name": "Snippets"
        }
      ]
    },
    "configuration": {
      "title": "Snipplets",
      "properties": {
        "snipplets.serverUrl": {
          "type": "string",
          "default": null,
          "description": "Server Url",
          "scope": "application"
        }
      }
    }
  }
}
